---
import Layout from "../layouts/Layout.astro";
import Admin from "../components/admin/admin";
import Books from "../components/admin/Books";

const pageDescription = "Write and publish your interactive books on MindMine. Create engaging stories with our powerful writing studio. Start your creative journey today.";
---

<Layout 
  title="Write"
  description={pageDescription}
  image="https://mindmine.netlify.app/og-image.png"
  canonical="https://mindmine.netlify.app/write/"
>
  <div class="min-h-screen bg-gradient-to-br from-blush via-white via-peach/5 to-gold/10">
    {/* Animated Background Elements */}
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 w-72 h-72 bg-gold/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-40 right-20 w-96 h-96 bg-peach/10 rounded-full blur-3xl animate-pulse delay-700"></div>
      <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-rosewood/5 rounded-full blur-3xl animate-pulse delay-1000"></div>
    </div>

    {/* Header Section - Enhanced */}
    <div class="relative z-10 bg-gradient-to-r from-blush via-peach to-gold py-12 sm:py-16 md:py-20 px-4 sm:px-6 shadow-2xl border-b-4 border-gold/50">
      <div class="max-w-7xl mx-auto">
        <div class="text-center space-y-4 animate-fade-in">
          <div class="inline-flex items-center justify-center gap-2 mb-4">
            <div class="text-5xl">‚ú®</div>
            <span class="text-sm sm:text-base font-bold bg-white/40 backdrop-blur-sm text-taupe px-4 py-2 rounded-full border border-white/60 shadow-lg">
              Creative Studio
            </span>
          </div>
          
          <h1 class="text-5xl sm:text-6xl md:text-7xl font-black text-taupe drop-shadow-lg leading-tight">
            Your Writing Studio
          </h1>
          
          <p class="text-base sm:text-lg md:text-xl text-taupe/90 max-w-3xl mx-auto leading-relaxed font-semibold drop-shadow">
            Craft captivating stories, manage your chapters seamlessly, and share your imagination with readers worldwide
          </p>

          {/* Quick Stats */}
          <div class="flex flex-wrap justify-center gap-4 sm:gap-6 mt-8 pt-6 border-t border-white/30">
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-taupe">üìö</div>
              <p class="text-xs sm:text-sm text-taupe/80 mt-2">Build Your Library</p>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-taupe">‚úçÔ∏è</div>
              <p class="text-xs sm:text-sm text-taupe/80 mt-2">Write Chapters</p>
            </div>
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-taupe">üåü</div>
              <p class="text-xs sm:text-sm text-taupe/80 mt-2">Publish & Share</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Main Content */}
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 py-12 sm:py-16 md:py-20">
      {/* Feature Highlights - Before Books Section */}
    

      {/* Books Section - Main Content */}
      <div class="mb-12 sm:mb-16">
        <div class="animate-fade-in">
          <Books client:only="react" />
        </div>
      </div>
    </div>

    {/* Admin (FAB and Modal) - Floating */}
    <div class="relative z-50">
      <Admin client:only="react" />
    </div>
  </div>

  <style>
    @keyframes pulse-slow {
      0%, 100% {
        opacity: 0.5;
      }
      50% {
        opacity: 1;
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    .delay-700 {
      animation-delay: 0.7s;
    }

    .delay-1000 {
      animation-delay: 1s;
    }

    .animate-pulse {
      animation: pulse-slow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
  </style>
</Layout>
