---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Write">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-8 animate-fade-in">
        <h1 class="text-3xl font-bold text-rosewood mb-6">Start Writing</h1>
        
        <form class="space-y-6">
          <div>
            <label for="title" class="block text-taupe mb-2">Title</label>
            <input
              type="text"
              id="title"
              class="w-full px-4 py-2 border border-gold rounded-lg focus:outline-none focus:ring-2 focus:ring-rosewood"
              placeholder="Enter your story title"
            />
          </div>

          <div>
            <label for="genre" class="block text-taupe mb-2">Genre</label>
            <select
              id="genre"
              class="w-full px-4 py-2 border border-gold rounded-lg focus:outline-none focus:ring-2 focus:ring-rosewood"
            >
              <option value="">Select a genre</option>
              <option value="fantasy">Fantasy</option>
              <option value="romance">Romance</option>
              <option value="mystery">Mystery</option>
              <option value="scifi">Science Fiction</option>
              <option value="contemporary">Contemporary</option>
            </select>
          </div>

          <div>
            <label for="synopsis" class="block text-taupe mb-2">Synopsis</label>
            <textarea
              id="synopsis"
              rows="4"
              class="w-full px-4 py-2 border border-gold rounded-lg focus:outline-none focus:ring-2 focus:ring-rosewood"
              placeholder="Write a brief synopsis of your story"
            ></textarea>
          </div>

          <div>
            <label for="content" class="block text-taupe mb-2">Your Story</label>
            <div class="border border-gold rounded-lg">
              <div class="p-4 bg-peach border-b border-gold">
                <div class="flex gap-2">
                  <button class="p-2 hover:bg-white rounded" title="Bold">
                    <strong>B</strong>
                  </button>
                  <button class="p-2 hover:bg-white rounded" title="Italic">
                    <em>I</em>
                  </button>
                  <button class="p-2 hover:bg-white rounded" title="Underline">
                    <u>U</u>
                  </button>
                </div>
              </div>
              <textarea
                id="content"
                rows="20"
                class="w-full px-4 py-2 focus:outline-none"
                placeholder="Start writing your story here..."
              ></textarea>
            </div>
          </div>

          <div class="flex justify-end gap-4">
            <button
              type="button"
              class="px-6 py-2 border border-rosewood text-rosewood rounded-lg hover:bg-rosewood hover:text-white transition-colors"
            >
              Save Draft
            </button>
            <button
              type="submit"
              class="px-6 py-2 bg-rosewood text-white rounded-lg hover:bg-sienna transition-colors"
            >
              Publish
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<style>
  textarea {
    resize: vertical;
    min-height: 200px;
  }
</style> 