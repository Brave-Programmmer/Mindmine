---
interface Props {
  title: string;
  author: string;
  coverUrl: string;
  description: string;
  genre: string;
}

const { title, author, coverUrl, description, genre } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden animate-fade-in hover:shadow-xl transition-shadow">
  <div class="relative h-48">
    <img
      src={coverUrl}
      alt={`Cover of ${title}`}
      class="w-full h-full object-cover"
    />
    <div class="absolute top-2 right-2 bg-rosewood text-white px-3 py-1 rounded-full text-sm">
      {genre}
    </div>
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-bold text-rosewood mb-2">{title}</h3>
    <p class="text-sienna mb-4">by {author}</p>
    <p class="text-taupe mb-4 line-clamp-3">{description}</p>
    
    <div class="flex justify-between items-center">
      <button class="text-rosewood hover:text-sienna transition-colors">
        Read More â†’
      </button>
      <button class="bg-gold text-taupe px-4 py-2 rounded-full hover:bg-sienna hover:text-white transition-colors">
        Add to List
      </button>
    </div>
  </div>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 