---
import { Footer } from "../components/Footer";
import "@fontsource-variable/rubik";
import { Navbar } from "../components/Navbar.tsx";
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://mindmine.netlify.app/" />
    <title>{title} | mindMine</title>

    <!-- SEO Meta -->
    <meta
      name="description"
      content="MindMine is a creative platform where authors write interactive books and readers explore immersive stories. Unleash your imagination as a writer or dive into a world of stories as a reader."
    />
    <meta
      name="keywords"
      content="MindMine, write books, read stories, storytelling platform, authors, interactive books, digital publishing, creative writing, reading platform, online books"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Join MindMine â€“ where authors publish books and readers experience immersive storytelling."
    />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content="https://mindmine.netlify.app/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="MindMine is a creative platform where authors and readers connect through stories."
    />
    <!-- Google Site Verification  -->
    <meta
      name="google-site-verification"
      content="Z9C27DbDJdGc-gpOVkfnacCQHrj1Y4crC3FQEU0TM1U"
    />
    <!-- Ads  -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1586605068707622"
      crossorigin="anonymous"></script>

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "MindMine",
        "url": "https://mindmine.netlify.app/",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://mindmine.netlify.app/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        },
        "description": "MindMine is a platform where authors can write interactive books and readers can explore immersive storytelling experiences."
      }
    </script>

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="pt-navbar">
    <Navbar client:only="react" />
    <slot />
    <Footer client:only="react" />
  </body>
</html>

<style is:global>
  :root {
    --rosewood: #8b4513;
    --gold: #d4af37;
    --peach: #ffdab9;
    --taupe: #483c32;
    --blush: #ffe4e1;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Rubik Variable", sans-serif;
    background-color: var(--blush);
    color: var(--taupe);
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #mobile-menu-button.active svg {
    transform: rotate(90deg);
    transition: transform 0.3s ease-in-out;
  }

  .pt-navbar {
    padding-top: 4.5rem;
  }
</style>
