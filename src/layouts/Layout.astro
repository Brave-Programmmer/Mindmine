---
import { Footer } from "../components/Footer";
import "@fontsource-variable/rubik";
import { Navbar } from "../components/Navbar/Navbar.tsx";
import LayoutWrapper from "../components/LayoutWrapper";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title,
  description = "MindMine is a creative platform where authors write interactive books and readers explore immersive stories. Unleash your imagination as a writer or dive into a world of stories as a reader.",
  image = "https://mindmine.netlify.app/og-image.png",
  canonical = "https://mindmine.netlify.app/",
} = Astro.props as Props;

const siteUrl = "https://mindmine.netlify.app";
const currentUrl = new URL(Astro.request.url);
const canonicalUrl = canonical || currentUrl.href;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover"
    />
    <meta name="theme-color" content="#8b4513" />
    <meta
      name="robots"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <meta
      name="googlebot"
      content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    />
    <link rel="canonical" href={canonicalUrl} />
    <title>{title} | mindMine</title>

    <!-- Primary Meta Tags -->
    <meta name="title" content={`${title} | mindMine`} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="MindMine, write books, read stories, storytelling platform, authors, interactive books, digital publishing, creative writing, reading platform, online books, book publishing"
    />
    <meta name="author" content="MindMine" />
    <meta name="language" content="English" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={`${title} | mindMine`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="MindMine" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={`${title} | mindMine`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    <meta name="twitter:creator" content="@mindMine" />

    <!-- Additional SEO -->
    <meta name="last-modified" content={new Date().toISOString()} />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />

    <!-- Google Site Verification  -->
    <meta
      name="google-site-verification"
      content="Z9C27DbDJdGc-gpOVkfnacCQHrj1Y4crC3FQEU0TM1U"
    />
    <!-- Ads - Only in production to avoid CORS issues in development -->
    {
      import.meta.env.PROD && (
        <script
          async
          src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1586605068707622"
          crossorigin="anonymous"
        />
      )
    }

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "@id": "https://mindmine.netlify.app/#website",
            "url": "https://mindmine.netlify.app/",
            "name": "MindMine",
            "description": "A creative platform where authors write interactive books and readers explore immersive stories",
            "potentialAction": {
              "@type": "SearchAction",
              "target": {
                "@type": "EntryPoint",
                "urlTemplate": "https://mindmine.netlify.app/search?q={search_term_string}"
              },
              "query-input": "required name=search_term_string"
            },
            "inLanguage": "en-US"
          },
          {
            "@type": "Organization",
            "@id": "https://mindmine.netlify.app/#organization",
            "name": "MindMine",
            "url": "https://mindmine.netlify.app/",
            "description": "A creative platform where authors write interactive books and readers explore immersive stories",
            "sameAs": ["https://twitter.com/mindmine"],
            "contactPoint": {
              "@type": "ContactPoint",
              "contactType": "Customer Support",
              "email": "support@mindmine.app"
            },
            "image": "https://mindmine.netlify.app/og-image.png"
          }
        ]
      }
    </script>
    <script type="text/javascript" src="https://apis.google.com/js/api.js"
    ></script>
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="pt-navbar">
    <LayoutWrapper client:only="react">
      <Navbar client:only="react" />
      <main class="min-h-screen">
        <slot />
      </main>
      <Footer client:only="react" />
    </LayoutWrapper>
  </body>
</html>

<style is:global>
  * {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  html,
  body {
    margin: 0;
    padding: 0;
  }

  body {
    overflow-x: hidden;
  }

  body.no-scroll {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    body {
      font-size: 16px; /* Prevent iOS zoom */
    }
  }

  :root {
    --rosewood: #8b4513;
    --gold: #d4af37;
    --peach: #ffdab9;
    --taupe: #483c32;
    --blush: #ffe4e1;
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Rubik Variable", sans-serif;
    background-color: var(--blush);
    color: var(--taupe);
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #mobile-menu-button.active svg {
    transform: rotate(90deg);
    transition: transform 0.3s ease-in-out;
  }

  .pt-navbar {
    padding-top: 4.5rem;
  }
</style>
